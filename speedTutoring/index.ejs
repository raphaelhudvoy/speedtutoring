<body class="main" data-ng-app="speedTutoring">

	<div data-ng-controller="loginController">

		<!-- **************** -->
		<!-- Login / Register -->
		<!-- **************** -->
		<div class="container-fluid">
			<div class = "row">
				<div class="col-lg-offset-4"><img src="images/tutrlogo-andtagline2.png" height="195"></div>
			</div>
			<div class="row text-center">
				<div class="col-lg-offset-1 col-lg-4">
					
					<div class = "row">
						<h2><b>Sign In</b></h2>
						<form role="form">
							<fieldset>
								<div class="form-group">
				        			<input type="text" name="email" id="username" class="form-control input-lg" placeholder="Username" ng-model="vm.user.username">
								</div>
								<div class="row">
									<div class="col-xs-6 col-sm-6 col-md-6">
				          				<input  type="password" name="password" id="password" class="form-control input-lg" placeholder="Password" ng-model="vm.user.password">
									</div>
									<div class="col-xs-6 col-sm-6 col-md-6">
										<input type="submit" class="btn btn-lg btn-primary btn-block" data-ng-click="vm.user.submit()" value="Sign In">
									</div>
								</div>

								<!-- NOT YET IMPLEMENTED -->
								<!--
								<span class="button-checkbox">
									<button type="button" class="btn" data-color="info">Remember Me</button>
				                    <input type="checkbox" name="remember_me" id="remember_me" checked="checked" class="hidden">
									<a href="" class="btn btn-link pull-right">Forgot Password?</a>
								</span>-->

							</fieldset>
						</form>	
					</div>
					<br/>
					<div class="row">
						<dl>
						  <dt>Connect</dt>
						  <dd>Get matched quickly to your peers</dd>
						</dl>
						<dl>
						  <dt>Learn</dt>
						  <dd>Find the help you need</dd>
						</dl>
						<dl>
						  <dt>Teach</dt>
						  <dd>Help others with what you know</dd>
						</dl>
					</div>
				</div>
				<div class ="col-lg-1"></div>
				<div class = "col-lg-4">
					
					<form role="form">
						<h2><b>Register</b></h2>
						<div class="row">
							<div class="form-group">
								<input type="text" name="username" id="username" class="form-control input-lg" placeholder="Username" tabindex="4" ng-model="vm.regUser.username">
							</div>
							<div class="row">
								<div class="col-lg-12">
									<div class="form-group">
										<input type="password" name="password" id="password" class="form-control input-lg" placeholder="Password" tabindex="5" ng-model="vm.regUser.password">
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-lg-12">
			          				<input type="submit" class="btn btn-lg btn-primary btn-block" data-ng-click="vm.regUser.submit()" value="Register">
								</div>
							</div>
						</form>
					</div>
				</div>

			</div>
			</div>
    
</div>
			</div>

		</div>

