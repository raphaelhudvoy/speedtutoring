<link rel="stylesheet" href="stylesheets/bootstrap/bootstrap.css">
<div class = "container-fluid">
	<div class = "row">
		<div class = "col-lg-8 col-lg-offset-2 well well-lg">
			<div ng-switch="vm.askStep">

				<div data-ng-switch-when="1">
					<h1 class = "text-center">What do you need help with?</h1>
					<div class="input-group">
			      <input type="text" class="form-control" ng-change="vm.searchForTags()" data-ng-model="vm.searchTags.input">
						<div data-ng-repeat="tag in vm.searchTags.results | filter:vm.searchTags.input "> 
							<div data-ng-click="vm.tags.add(tag)">{{ tag.tag }}</div>
						</div>
			      <span class="input-group-btn">
			        <button class="btn btn-primary" type="button" ng-click="vm.askStep=2">Go</button>
			      </span>
			    </div><!-- /input-group -->
			  </div>

			  <div data-ng-switch-when="2">
			  	{{vm.tags}}
					<h1 class = "text-center">What is your question?</h1>
					<div class="input-group">
			      <input type="text" class="form-control" data-ng-model="vm.question.question" ng-keyup="vm.checkEnter($event)">
			      <span class="input-group-btn">
			        <button class="btn btn-primary" type="button" ng-click="vm.askQuestion(vm.question)">Ask</button>
			      </span>
			    </div><!-- /input-group -->
			  </div>
			  <div ng-switch-default> </div>
		  </div>
		</div>
	</div>
