<div class = "container-fluid">
	<div class = "row nohelp">
		<div class = "col-lg-8 col-lg-offset-2 well well-lg">
			<div ng-switch="vm.askStep">

				<div data-ng-switch-when="1">

					<div class="container-fluid">

						<div class="row">
							<div class="col-md-12">
								<h1 class = "text-center">What do you need help with? </h1>
							</div>
						</div>

						<div class="row">
							<div class="col-md-8 col-md-offset-2">
								<div class="row tag-list">
									<button type="button" class="btn btn-success" ng-repeat="(tag, value) in vm.selectedTags" ng-click="vm.unselectTag(tag)">{{ tag}}</button>
									
								</div>
							</div>
						</div>

						<div class="row">
							<div class="col-md-8 col-md-offset-2">
								<div class="row tag-list">
									<button type="button" class="btn btn-default" ng-repeat="(tag, description) in vm.suggestedTags" ng-click="vm.selectTag(tag)">{{ tag }}</button>
									
								</div>
							</div>
						</div>

						<div class="row">
							<div class="col-md-8 col-md-offset-2">
									<input type="text" class="tag-search" ng-model="vm.tagSearchInput" placeholder="Search for other tags" ng-change="vm.searchTag()">				
									<ul class="tag-search-result">
										<li ng-show="vm.tagSearchInput">{{ vm.tagSearchInput }}</li>
										<li ng-repeat="(key, value) in vm.tagSearchResults">{{key}}</li>
									</ul>
									
							</div>
							<div class="col-md-2">
								<button class="btn btn-primary" ng-click="vm.goToStep2()">ok</button>
							</div>
						</div>

						<!-- /input-group -->				
					</div>
						
				</div>


				<div data-ng-switch-when="2">
				
					<div class="row">
						<div class="col-md-12">
							<h1 class = "text-center">What is your question? </h1>
						</div>
					</div>
					
	
					<div class="row">
						<div class="col-md-8 col-md-offset-2">
							<input type="text" class="tag-search" ng-model="vm.tagSearchInput" placeholder="Search for other tags" ng-change="vm.searchTag()">				
								
						</div>
						<div class="col-md-2">
							<button class="btn btn-primary" ng-click="vm.goToStep2()">ok</button>
						</div>
					</div>

					<div class="row">
						<div class="col-md-8 col-md-offset-2">
							<div class="row tag-list">
								<button type="button" class="btn btn-success" ng-repeat="(tag, value) in vm.selectedTags">{{ tag}}</button>
								
							</div>
						</div>
					</div>


				</div>

				<div ng-switch-default> </div>
		  	</div>
		</div>
	</div>

	
	<div class = "row help">
		<div class = "col-lg-8 col-lg-offset-2">
			<a class="btn btn-default btn-lg btn-block" href="#/tutor">Help someone else</a>
		</div>
	</div>
</div>