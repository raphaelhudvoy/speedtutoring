<div class="container chat">

	<ul id="chat">
		<li class="row msg-container" ng-repeat="msg in wb.chat.msg">
			<div class="col-md-10 col-sm-10 msg-content me" ng-show="msg.user">
				{{msg.msg}}
			</div>
			<div class="col-md-offset-2 col-md-9 col-sm-offset-2 col-sm-9 msg-content" ng-hide="msg.user">
				{{msg.msg}}
			</div>
		</li>
	</ul>
			
	<div class="chat-tools">
		<form ng-submit="wb.send_msg()">
			<input class="chat-input" type="text" placeholder="Write your message here" ng-model="wb.chat.input">
			
		</form>
		
	</div>
</div>


